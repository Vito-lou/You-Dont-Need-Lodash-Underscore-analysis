{
  "$schema": "./node_modules/@lunariajs/core/config.schema.json",
  "repository": {
    "name": "You-Dont-Need-Lodash-Undersocre-analysis",
    "branch": "master"
  },
  "files": [
    {
      "location": ".vitepress/config/{en,zh,pt}.ts",
      "pattern": ".vitepress/config/@lang.ts",
      "type": "universal"
    },
    {
      "location": "**/*.md",
      "pattern": "@lang/@path",
      "type": "universal"
    }
  ],
  "defaultLocale": {
    "label": "English",
    "lang": "en"
  },
  "locales": [
    {
      "label": "简体中文",
      "lang": "zh"
    },
    {
      "label": "Português",
      "lang": "pt"
    }
  ],
  "outDir": ".vitepress/dist/_translations",
  "ignoreKeywords": [
    "lunaria-ignore"
  ]
}